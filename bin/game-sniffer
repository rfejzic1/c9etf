#!/bin/bash
if [ $# -lt 2 ]
then
	echo ERROR: Insufficient parameters
	exit 1
fi

user="$1"
action="$2"


slovo=$(echo $user | cut -c 1)

workspace="/rhome/$slovo/$user/workspace/UUP_GAME"
case $action in
  tree)
    tree -J "$workspace"
  ;;
  read)
    if [ $# -lt 3 ]
    then
      echo ERROR: Insufficient parameters
      exit 1
    fi
    path="$3"
    cat "$workspace$path"
  ;;
  *)
    echo ERROR: unknown action
  ;;
esac
